# ============================================================================
# SBS VPS Deployment Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env files with real credentials

# ============================================================================
# Database Configuration
# ============================================================================
DB_HOST=postgres
DB_NAME=sbs_integration
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# ============================================================================
# AI Provider Configuration
# ============================================================================
# Choose one: gemini, deepseek, or custom
AI_PROVIDER=deepseek

# Gemini API (Google)
GEMINI_API_KEY=

# DeepSeek API (recommended for staging/production)
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com
ENABLE_DEEPSEEK=true

# Environment for feature gating
ENVIRONMENT=production

# ============================================================================
# NPHIES Configuration
# ============================================================================
NPHIES_ENV=sandbox
# For production, use: https://api.nphies.sa/api/v1
NPHIES_BASE_URL=https://sandbox.nphies.sa/api/v1
NPHIES_API_KEY=
NPHIES_TIMEOUT=30
NPHIES_MAX_RETRIES=3

# Set to false for production to use real NPHIES
# Set to true for staging/testing to use mock responses
ENABLE_MOCK_NPHIES=false

# ============================================================================
# Certificate Configuration
# ============================================================================
CERT_BASE_PATH=/certs
CERT_PASSWORD=
# Host path to certificates (mounted into signer service)
CERT_PATH_HOST=/opt/sbs/certs

# ============================================================================
# CORS & Security Configuration
# ============================================================================
# Comma-separated list of allowed origins
# Example: https://sbs.brainsait.cloud,https://api.brainsait.cloud
ALLOWED_ORIGINS=https://sbs.brainsait.cloud
CORS_ORIGIN=https://sbs.brainsait.cloud

# ============================================================================
# Landing API Configuration
# ============================================================================
PORT=3000
NODE_ENV=production
MAX_FILE_SIZE=10485760
ENABLE_STAGE_HOOKS=false
SBS_STAGE_HOOK_URL=
ENABLE_MOCK_PROCESSING=false

# ============================================================================
# Cloudflare Tunnel Configuration (optional)
# ============================================================================
# Get this from: cloudflare tunnel create sbs-vps
# Then: cloudflare tunnel token <tunnel-id>
CLOUDFLARE_TUNNEL_TOKEN=

# ============================================================================
# Traefik Integration (optional, alternative to Cloudflare Tunnel)
# ============================================================================
# Set to true to enable Traefik labels
TRAEFIK_ENABLE=false
TRAEFIK_NETWORK=traefik

# Service hostnames (when using Traefik)
LANDING_HOST=sbs.brainsait.cloud
NORMALIZER_HOST=normalizer.brainsait.cloud
FINANCIAL_HOST=financial.brainsait.cloud
SIGNER_HOST=signer.brainsait.cloud
NPHIES_HOST=nphies.brainsait.cloud

# ============================================================================
# Deployment Metadata
# ============================================================================
# Automatically set by CI/CD
DEPLOYED_AT=
DEPLOYED_BY=
GIT_COMMIT=
GIT_BRANCH=
