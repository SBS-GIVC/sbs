# Database Configuration
DB_HOST=postgres
DB_NAME=sbs_integration
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_PORT=5432

# Gemini AI Configuration (for Normalizer Service)
GEMINI_API_KEY=your_gemini_api_key_here

# DeepSeek AI Configuration (for Normalizer + n8n direct copilot)
# NOTE: keep this as a non-secret placeholder (avoid real key formats).
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com

# NPHIES Configuration
NPHIES_ENV=sandbox
NPHIES_BASE_URL=https://sandbox.nphies.sa/api/v1
NPHIES_API_KEY=your_nphies_api_key_here
NPHIES_TIMEOUT=30
NPHIES_MAX_RETRIES=3

# Certificate Configuration
CERT_BASE_PATH=/certs
CERT_PASSWORD=

# Landing API (sbs-landing)
SBS_NORMALIZER_URL=http://localhost:8000
SBS_SIGNER_URL=http://localhost:8001
SBS_FINANCIAL_RULES_URL=http://localhost:8002
SBS_NPHIES_BRIDGE_URL=http://localhost:8003

# Optional: eligibility service
SBS_ELIGIBILITY_URL=http://localhost:8004

# Optional: Copilot gateway wiring
# If set on normalizer-service, copilot will call this gateway.
AI_COPILOT_URL=http://ai-gateway:8010/chat
AI_COPILOT_API_KEY=
AI_COPILOT_TIMEOUT_SECONDS=12

# ai-gateway routing (choose one)
AI_GATEWAY_N8N_WEBHOOK_URL=
CLOUDFLARE_AI_GATEWAY_URL=
CLOUDFLARE_API_TOKEN=

# Optional: protect ai-gateway with a shared secret
AI_GATEWAY_SHARED_SECRET=

# CORS Configuration (Security Critical)
# Comma-separated list of allowed frontend domains
# Example for production: ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# API Configuration
PORT=3000
NODE_ENV=development

# pgAdmin Configuration (Optional)
PGADMIN_EMAIL=admin@sbs.sa
PGADMIN_PASSWORD=admin_password
