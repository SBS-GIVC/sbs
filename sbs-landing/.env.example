# =============================================================================
# SBS Landing API - Environment Configuration
# =============================================================================
# IMPORTANT: Copy this file to .env and fill in all required values
# =============================================================================

# Database Configuration
DB_HOST=postgres
DB_NAME=sbs_integration
DB_USER=sbs_user
DB_PASSWORD=  # REQUIRED: Use a strong password

# Gemini AI Configuration (for GIVC Health Frontend & Normalizer Service)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash-exp

# NPHIES Configuration
NPHIES_ENV=sandbox
NPHIES_BASE_URL=https://sandbox.nphies.sa/api/v1
NPHIES_API_KEY=  # REQUIRED for NPHIES integration
NPHIES_TIMEOUT=30
NPHIES_MAX_RETRIES=3

# Certificate Configuration
CERT_BASE_PATH=/certs
CERT_PASSWORD=

# n8n Workflow Engine Configuration
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=  # REQUIRED: Use a strong password
N8N_HOST=localhost
N8N_WEBHOOK_URL=http://n8n:5678/webhook/sbs-claim-submission
N8N_EDITOR_BASE_URL=http://localhost:5678
TIMEZONE=Asia/Riyadh

# SBS Microservices URLs (Internal Docker network)
SBS_NORMALIZER_URL=http://normalizer-service:8000
SBS_SIGNER_URL=http://signer-service:8001
SBS_FINANCIAL_RULES_URL=http://financial-rules-engine:8002
SBS_NPHIES_BRIDGE_URL=http://nphies-bridge:8003

# CORS Configuration (Security Critical)
# Comma-separated list of allowed frontend domains
# Production example: ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# API Configuration
PORT=3000
NODE_ENV=production

# Enable direct SBS service calls (bypass n8n) - set to false in production
ENABLE_DIRECT_SBS=false

# pgAdmin Configuration (Optional - disable in production)
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=  # REQUIRED if using pgAdmin
