# ============================================================
# SBS Integration Engine - Environment Configuration
# ============================================================
# Copy this file to .env and update with your values
# DO NOT commit .env file to version control
# ============================================================

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend CORS Configuration
# Multiple origins separated by commas
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://fadil369.github.io
# Backwards compatibility (deprecated)
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000,https://fadil369.github.io

# File Upload Configuration
UPLOAD_DIR=/tmp/sbs-uploads
MAX_FILE_SIZE=10485760

# Microservices URLs
# Normalizer Service - Code translation and standardization
SBS_NORMALIZER_URL=http://localhost:8000

# Financial Rules Engine - Business logic and pricing
SBS_FINANCIAL_RULES_URL=http://localhost:8002

# Signer Service - Digital signatures and encryption
SBS_SIGNER_URL=http://localhost:8001

# NPHIES Bridge - National Platform integration
SBS_NPHIES_BRIDGE_URL=http://localhost:8003

# Eligibility Service (optional)
# If set, Landing proxies POST /api/eligibility/check to ${SBS_ELIGIBILITY_URL}/check
SBS_ELIGIBILITY_URL=http://localhost:8004

# Copilot wiring (optional)
# auto (default): proxy to ${SBS_INTERNAL_COPILOT_URL} or ${SBS_NORMALIZER_URL}/copilot/chat, else deterministic fallback
# deterministic: always use deterministic fallback
SBS_COPILOT_MODE=auto
SBS_INTERNAL_COPILOT_URL=

# Database Configuration (when ready)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=sbs_integration
# DB_USER=sbs_user
# DB_PASSWORD=secure_password

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
JWT_SECRET=your-secret-key-change-in-production
API_KEY=your-api-key-change-in-production

# Email Configuration (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@sbs.com

# Feature Flags
ENABLE_MOCK_PROCESSING=true
ENABLE_DETAILED_LOGGING=true
ENABLE_METRICS=true
ENABLE_STAGE_HOOKS=false
SBS_STAGE_HOOK_URL=

# ============================================================
# DEVELOPMENT ONLY - DO NOT USE IN PRODUCTION
# ============================================================
DEBUG=sbs:*
MOCK_API_RESPONSES=false
